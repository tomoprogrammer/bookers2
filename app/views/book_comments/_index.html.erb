<% book.book_comments.each do |book_comment| %>
 <tr>
  <td>
   <%= link_to user_path(book.user_id) do %>
    <%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
   <% end %>
    <br>
     <%= link_to user_path(book.user.id) do %>
      <%= book_comment.user.name %>
     <% end %>
   </td>
   <td>
    <%= book_comment.comment %>
     </td>
      <% if book_comment.user == current_user %>
     <td>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
     </td>
     </tr>
  <% end %>