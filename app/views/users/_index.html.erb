<table class="table">
       <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
       </thead>
      <tbody>
  <% users.each do |user| %>
  <tr>
   <td>
   <%= attachment_image_tag user, :profile_image, :fill,40,40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
   </td>
   <td>
  <%= link_to user_path(user) do %>
    <%= user.name %>
  <% end %>
  </td>
  </tr>
<% end %>
</tbody>
</table>